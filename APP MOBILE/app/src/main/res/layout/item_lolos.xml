<!--            tools:ignore="MissingConstraints" />-->

        <TextView
            android:id="@+id/label_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_id_barang"
            android:layout_marginTop="12dp"
            android:text=""
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/label_id_barang"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/data_namalengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/label_nama_lengkap"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/label_nama_lengkap"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/data_jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_jurusan"
            android:layout_marginStart="51dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/label_jurusan"
            android:text="jurusan"
            card_view:layout_constraintStart_toEndOf="@+id/label_jurusan"
            card_view:layout_constraintTop_toBottomOf="@+id/data_namalengkap" />



        <TextView
            android:id="@+id/data_nem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_jurusan"
            android:layout_marginStart="76dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/label_nem"
            android:text="nem"
            card_view:layout_constraintStart_toEndOf="@+id/label_nem"
            card_view:layout_constraintTop_toBottomOf="@+id/data_jurusan" />

